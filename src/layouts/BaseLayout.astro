---
const { title, lang } = Astro.props;

const navLinks = [
  { id: "home", sr: "Poƒçetna", en: "Home", href: lang === 'sr' ? '/sr' : '/en' },
  { id: "about", sr: "O nama", en: "About", href: lang === 'sr' ? '/sr/about' : '/en/about' },
  { id: "schedule", sr: "Raspored", en: "Schedule", href: lang === 'sr' ? '/sr/schedule' : '/en/schedule' },
  { id: "gallery", sr: "Galerija", en: "Gallery", href: lang === 'sr' ? '/sr/gallery' : '/en/gallery' },
  { id: "contact", sr: "Kontakt", en: "Contact", href: lang === 'sr' ? '/sr/contact' : '/en/contact' },
];
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="icon" type="image/png" href="/logo.png" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <header class="bg-white shadow flex items-center px-6 py-3 sticky top-0 z-10">
      <img src="/logo.png" alt="Capoeira Akademija Logo" class="h-12 w-12 rounded-full border-2 border-gray-200 bg-white mr-4" />
      <nav class="flex-1 flex items-center">
        <div class="flex gap-6 ml-4">
          {navLinks.map(link => (
            <a href={link.href} class="text-blue-900 font-medium text-base px-2 py-1 rounded hover:bg-blue-100 hover:text-blue-800 transition">
              {lang === 'sr' ? link.sr : link.en}
            </a>
          ))}
        </div>
        <div class="ml-auto text-sm">
          <a href="/sr" class={lang === 'sr' ? "font-bold underline" : "text-gray-600 hover:underline"}>Srpski</a>
          <span class="mx-1 text-gray-400">|</span>
          <a href="/en" class={lang === 'en' ? "font-bold underline" : "text-gray-600 hover:underline"}>English</a>
        </div>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto my-8 bg-white rounded-xl shadow p-8">
      <slot />
    </main>
    <footer class="text-center py-6 text-gray-500 text-sm">
      <p>
        <a href="https://www.facebook.com/kapueraakademija" target="_blank" rel="noopener" class="underline hover:text-blue-700">Facebook stranica</a>
      </p>
      <p>&copy; {new Date().getFullYear()} Kapuera Akademija Novi Sad</p>
    </footer>
  </body>
</html>
